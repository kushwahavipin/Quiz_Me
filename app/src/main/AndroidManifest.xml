<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.erinfa.quizme">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name="com.erinfa.quizme.Admin.ShowQuestionActivity"
            android:exported="false" />
        <activity android:name="com.erinfa.quizme.Admin.ShowRequestActivity"
            android:exported="false" />
        <activity android:name="com.erinfa.quizme.Admin.AddQuizCategoryActivity"
            android:exported="false" />
        <activity android:name="com.erinfa.quizme.Admin.AdminHomeScreenActivity"
            android:exported="false"/>
        <activity android:name="com.erinfa.quizme.ForgetPasswordActivity"
            android:exported="false" />
        <activity android:name="com.erinfa.quizme.Admin.AdminQuestionAdd"
            android:exported="false" />
        <activity android:name="com.erinfa.quizme.UpdateProfile"
            android:exported="false" />
        <activity android:name="com.erinfa.quizme.Admin.AddQuizQuestionActivity"
            android:exported="false" />
        <activity android:name="com.erinfa.quizme.SpinnerActivity"
            android:exported="false"/>
        <activity android:name="com.erinfa.quizme.ResultActivity"
            android:exported="false"/>
        <activity android:name="com.erinfa.quizme.QuizActivity"
            android:exported="false"/>
        <activity android:name="com.erinfa.quizme.SignupActivity"
            android:exported="false"/>
        <activity android:name="com.erinfa.quizme.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.erinfa.quizme.MainActivity"
            android:exported="false"/>

        <meta-data 
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>